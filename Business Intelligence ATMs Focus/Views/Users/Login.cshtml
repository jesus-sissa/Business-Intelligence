                toastr.error("Clave_Unica,Usuario y/o Contraseña Faltante", 'Error al Iniciar Session', {
                    "positionClass": "toast-bottom-full-width",
                    timeOut: 5000,
                    "closeButton": true,
                    "debug": false,
                    "newestOnTop": true,
                    "progressBar": true,
                    "preventDuplicates": true,
                    "onclick": null,
                    "showDuration": "300",
                    "hideDuration": "1000",
